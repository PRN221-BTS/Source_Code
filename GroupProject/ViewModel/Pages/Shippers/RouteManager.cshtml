@page
@model ViewModel.Pages.Shippers.RouteManagerModel
@{
}
<h1>Route Management</h1>
<div class="accordion" id="accordionExample">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Receiving Orders
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
           
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.receivingOrder[0].RouteID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.receivingOrder[0].ReceivingAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.receivingOrder[0].Note)
                        </th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model.receivingOrder)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RouteID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReceivingAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Note)
                            </td>
                        </tr>
            }
                </tbody>
            </table>

        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                Sending Orders
            </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.sendingOrder[0].RouteID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.sendingOrder[0].SendingAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.sendingOrder[0].Note)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.sendingOrder)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RouteID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SendingAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Note)
                                </td>
                                <td>
                                    <a asp-page="./RouteManager" asp-page-handler="Update" asp-route-id="@item.OrderInRoutes">Confirm</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>