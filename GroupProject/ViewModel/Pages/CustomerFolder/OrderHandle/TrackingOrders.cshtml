        <div class="row">
            <div class="col-2">
            <div class="progress" role="progressbar" aria-label="Success example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="height: 200px; width: 10px; display: inline-block;background-color : @item.ColorProperty">
