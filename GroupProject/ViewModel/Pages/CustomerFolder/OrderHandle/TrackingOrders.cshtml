        </div>
        <div class="col-8" style="color :@item.ColorProperty">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(x => item.SequenceNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(x => item.SequenceNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(x => item.WarehouseName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(x => item.WarehouseName)
