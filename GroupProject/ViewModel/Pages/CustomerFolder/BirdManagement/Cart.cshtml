@page
@model ViewModel.Pages.CustomerFolder.BirdManagement.CartModel
@{
}
<h3>Cart</h3>
<table border="1">
<form method="post" asp-page="cart" asp-page-handler="update">
    <tr>
        <th>Action</th>
        <th>Id</th>
        <th>Name</th>
        <th>Type</th>
        <th>Quantity<input type="submit" value="Update" /></th>
        <th>Sub Total</th>
    </tr>
    @foreach (var item in Model.cart)
    {
        <tr aligin="center">
            <td align="center">
                <a asp-page="cart" asp-page-handler="delete" asp-route-id="@item.bird.BirdId">X</a>
            </td>
            <td>@item.bird.BirdId</td>
            <td>@item.bird.BirdName</td>
            <td>$@item.bird.BirdType</td>
            <td><input type="number" name="quantities" value="@item.Quantity" min="1" style="width: 50px;" /></td>
            <td>$@(item.Quantity)</td>
        </tr>
    }
    <tr>
        <td colspan="6" align="right"> Total</td>
        <td align="center">@Model.Total</td>
    </tr>

</form>
    </table>
<a asp-page="cart" asp-page-handler="order">Order</a>