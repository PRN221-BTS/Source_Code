@page
@model ViewModel.Pages.Manager.ShipperManager.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Shipper Management</h1>

<p style="text-align: right;">
    <a asp-page="Create" style="background-color: #1919ff; color: white; padding: 10px 20px; text-decoration: none;">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shipper[0].ShipperName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipper[0].IncomeWallet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipper[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipper[0].VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipper[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipper[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipper[0].Warehouse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Shipper) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShipperName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.IncomeWallet)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Password)*@
                *****
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Warehouse.WarehouseId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ShipperId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ShipperId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ShipperId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
